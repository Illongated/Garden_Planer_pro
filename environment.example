# =============================================================================
# Garden Planner Pro - Environment Configuration Template
# Copy this file to .env and update with your actual values
# =============================================================================

# =================
# Environment Type
# =================
ENVIRONMENT=development  # development, production, test

# =================
# Frontend Variables (VITE_)
# =================
# API Configuration
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000

# Development Configuration
VITE_ENV=development

# =================
# Backend Configuration
# =================
# Application Security
SECRET_KEY=your-very-long-secure-secret-key-here-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_HOURS=168
ALGORITHM=HS256

# API Settings
PROJECT_NAME=Garden Planner Pro API
API_V1_STR=/api/v1

# =================
# Database Configuration
# =================
# Development (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/garden_planner

# Production (update these for production)
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_USER=garden_planner_user
POSTGRES_DB=garden_planner

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# =================
# Redis Configuration
# =================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_EXPIRE_SECONDS=3600
# REDIS_PASSWORD=your-secure-redis-password-here  # Uncomment for production

# =================
# Email Configuration
# =================
# SMTP Settings (using Mailtrap for development)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.mailtrap.io
SMTP_USER=your_mailtrap_user
SMTP_PASSWORD=your_mailtrap_password
EMAILS_FROM_EMAIL=noreply@gardenplanner.com
EMAILS_FROM_NAME=Garden Planner Pro

# =================
# Security Configuration
# =================
# CSRF Protection
CSRF_SECRET=your-csrf-secret-key-here

# Frontend URL for CORS
CLIENT_URL=http://localhost:5173

# Production Security (uncomment for production)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60

# =================
# Performance Configuration
# =================
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600
QUERY_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100
RATE_LIMIT_PER_MINUTE=60

# Production Performance (uncomment for production)
# WORKER_PROCESSES=4
# MAX_CONNECTIONS=100

# =================
# Monitoring Configuration
# =================
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=30

# Production Monitoring (uncomment for production)
# LOG_LEVEL=INFO
# SENTRY_DSN=https://your-sentry-dsn-here
# GRAFANA_PASSWORD=your-secure-grafana-password-here

# =================
# CDN Configuration (Optional)
# =================
CDN_URL=
STATIC_FILES_CDN=false

# =================
# Backup Configuration (Production)
# =================
# Uncomment for production backup setup
# BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-here
# BACKUP_NOTIFICATION_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# BACKUP_RETENTION_DAYS=30

# =================
# SSL/TLS Configuration (Production)
# =================
# Uncomment for production HTTPS setup
# DOMAIN=yourdomain.com
# EMAIL=admin@yourdomain.com

# =================
# External Services (Optional)
# =================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =================
# Development Tools
# =================
# Uncomment for development debugging
# DEBUG=true
# VERBOSE_LOGGING=true
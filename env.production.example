# Agrotique Garden Planner - Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Database Configuration
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_USER=agrotique_user
POSTGRES_DB=agrotique

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here

# Application Security
SECRET_KEY=your-very-long-secure-secret-key-here-minimum-32-characters
ENVIRONMENT=production
LOG_LEVEL=INFO

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-here
BACKUP_NOTIFICATION_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Monitoring Configuration
GRAFANA_PASSWORD=your-secure-grafana-password-here

# SSL/TLS Configuration (for Let's Encrypt)
DOMAIN=agrotique.example.com
EMAIL=admin@agrotique.example.com

# External Services (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SENTRY_DSN=https://your-sentry-dsn-here

# Performance Configuration
WORKER_PROCESSES=4
MAX_CONNECTIONS=100
CACHE_TTL=3600

# Security Configuration
CORS_ORIGINS=https://agrotique.example.com,https://www.agrotique.example.com
ALLOWED_HOSTS=agrotique.example.com,www.agrotique.example.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Backup Retention
BACKUP_RETENTION_DAYS=30 